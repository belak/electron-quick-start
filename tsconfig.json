{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "esnext",
    "target": "es6",
    "moduleResolution": "node",
    "jsx": "react",
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "noEmit": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "strict": true,
    "allowJs": true,
    "noUnusedLocals": true
  },
  "include": ["./src/**/*"]
}
